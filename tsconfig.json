{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"],
    },
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": ["node_modules"],
  "include": [
    "App.tsx",
    "src",
    "*.config.js",
    "*.eslintrc.js"
  ]
}